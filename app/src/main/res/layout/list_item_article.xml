<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:layout_marginLeft="@dimen/space_4dp"
    android:layout_marginRight="@dimen/space_4dp"
    android:layout_marginTop="@dimen/space_4dp"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.learn.heddy.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_alignParentTop="true"


            android:background="@color/photo_placeholder"
            android:transitionName="@string/transition_photo"
            />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="16dp">
            <TextView
                    android:id="@+id/article_title"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/list_text_left_padding"
                    android:textColor="@color/titleGray2"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="Why There Is A Self"
                />

                <TextView
                    android:id="@+id/article_subtitle"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/list_text_left_padding"
                    android:textColor="@color/subtitleGray"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="June 11 2016 Hemingway's daugter writes about "
                    />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
